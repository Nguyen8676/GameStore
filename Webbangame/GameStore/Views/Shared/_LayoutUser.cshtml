<!DOCTYPE html>
<html>
<head style="background-color:gray">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CSSuser/StyleSheet1.css" rel="stylesheet" />
</head>



<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameStore", "Index", "GameStore", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;color:white">
                    <li >@Html.ActionLink("Home", "Index", "GameStore")</li>
                    <li>@Html.ActionLink("login", "Dangnhap", "Nguoidung")</li>
                    <li>@Html.ActionLink("new account", "Dangky", "Nguoidung")</li>  
                </ul>

                <ul class="nav navbar-nav" style="font-weight:bold;color:white;float:right">
                    <!--cục giỏ hàng-->
                    <li> @Html.Action("GiohangPartial", "Giohang")</li>
                </ul>


            </div>
        </div>

    </div>
    <div class="container" style="margin-top:20px">
        <div class="row">
            <div class="col-md-3">
                <div class="">
                    <!-- cot san pham theo the loai-->
                    @Html.Action("TheLoai", "GameStore")
                    <!-- cot san pham theo nha phat trien-->
                    @Html.Action("NhaPhatTrien", "GameStore")
                    <!-- cot san pham theo nha phat hanh-->
                    @Html.Action("NhaPhatHanh", "GameStore")
                </div>
            </div>
            <div class="col-md-9">
                <div class="container body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
       
    </div>



    <div style="background-color:black">
        <div class="container" style="margin-top:50px">
            <div>
                <div class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </div>
                @Html.Action( "LienHe", "GameStore", new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;color:black">
              

                </ul>
            </div>
        </div>

    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)



</body>
</html>
